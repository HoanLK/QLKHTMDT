
@{
    ViewBag.Title = "CHỐT ĐƠN HÀNG";
}

<div ng-controller="chotDonHangController">
    <div class="form-horizontal">
        <div class="panel panel-default">
            <div class="panel-heading ui-draggable-handle">
                <h3 class="panel-title"><strong>@ViewBag.Title</strong></h3>
            </div>
            <div class="panel-body">
                <!--ChotDonHang Grid-->
                <div class="col-md-12 col-sm-12 col-xs-12" id="chotDonHang">
                    <div id="gridContainer" dx-data-grid="gridChotDonHangs"></div>
                    <div dx-context-menu="contextMenuChotDonHangs"></div>
                </div>

                <!--CHỐT ĐƠN HÀNG-->
                <!--Popup Create-->
                <div class="popup" dx-popup="popupCreateChotDonHang">
                    <div data-options="dxTemplate: { name:'templateCreateChotDonHang' }">
                        <div style="text-align: center">Bạn muốn tạo phiếu chốt đơn hàng?</div>
                        <br />
                        <div dx-button="{ text: 'Có', icon: 'floppy', onClick: CreateChotDonHang, type: 'success' }"></div>
                        <div dx-button="{ text: 'Không', icon: 'clear', onClick: CancelCreateChotDonHang, type: 'danger' }"></div>
                    </div>
                </div>
                <!--Popup Modify-->
                <div class="popup" dx-popup="popupModifyChotDonHang">
                    <div data-options="dxTemplate: { name:'templateModifyChotDonHang' }">
                        <form ng-submit="SaveChotDonHang($event)" dx-validation-group="{chotDonHang}">
                            <div class="row">
                                <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                    <div class="dx-field">
                                        <label>Thời gian chốt đơn</label>
                                        <div dx-date-box="controlModifyChotDonHang.thoigianChotDonHang"></div>
                                    </div>
                                </div>
                                <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                    <div class="dx-field">
                                        <label>Trạng thái chốt đơn</label>
                                        <div dx-select-box="controlModifyChotDonHang.trangthaiChotDon"></div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="col-md-6">
                                        <div style="height: 65vh; font-size: 12px" dx-data-grid="gridDonHangChuaChots"></div>
                                    </div>
                                    <div class="col-md-6">
                                        <div style="height: 65vh; font-size: 12px" dx-data-grid="gridDonHangChots"></div>
                                    </div>
                                </div>


                                <div dx-validation-summary="{chotDonHang}"></div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="pull-left" dx-button="{ text: 'Chốt đơn hàng', icon: 'floppy', type: 'success', useSubmitBehavior: true }"></div>
                                <div class="pull-right" dx-button="{ text: 'Hủy bỏ', icon: 'clear', onClick: CancelSaveChotDonHang, type: 'danger' }"></div>
                            </div>
                        </form>
                    </div>
                </div>
                <!--Popup Delete-->
                <div class="popup" dx-popup="popupDeleteChotDonHang">
                    <div data-options="dxTemplate: { name:'templateDeleteChotDonHang' }">
                        <div style="text-align: center" ng-cloak>{{titleDeleteChotDonHang}}</div>
                        <br />
                        <div dx-button="{ text: 'Có', icon: 'floppy', onClick: ConfirmDeleteChotDonHang, type: 'success' }"></div>
                        <div dx-button="{ text: 'Không', icon: 'clear', onClick: CancelDeleteChotDonHang, type: 'danger' }"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

