@model Web.Models.IndexViewModel
@{
    ViewBag.Title = "Quản lý tài khoản cá nhân";
}


<p class="text-success">@ViewBag.StatusMessage</p>

<div class="form-horizontal">
    <div class="panel panel-default">
        <div class="panel-heading ui-draggable-handle">
            <h3 class="panel-title"><strong>@ViewBag.Title</strong></h3>
        </div>
        <div class="panel-body">
            <dl class="dl-horizontal">
                <dt>Mật khẩu:</dt>
                <dd>
                    [
                    @if (Model.HasPassword)
            {
                        @Html.ActionLink("Đổi mật khẩu", "ChangePassword")
                    }
                    else
                    {
                        @Html.ActionLink("Tạo mật khẩu", "SetPassword")
                    }
                    ]
                </dd>

                <br />
                <dt>
                    Bảo mật 2 lớp:
                </dt>
                <dd>
                    @if (Model.IsGoogleAuthenticatorEnabled)
                    {
                        @Html.ActionLink("[Hủy kích hoạt]", "DisableGoogleAuthenticator")
                    }
                    else
                    {
                        @Html.ActionLink("[Kích hoạt]", "EnableGoogleAuthenticator")
                    }
                </dd>

            </dl>
        </div>
    </div>
</div>
