@model Web.Models.VerifyCodeViewModel

@{
    ViewBag.Title = "Xác thực 2 lớp";
    Layout = "/Views/Shared/_LayoutNoSidebar.cshtml";
}


<div class="login-box animated fadeInDown">
    @*<div class="login-logo"></div>*@
    <div class="login-body">
        <div class="col-xs-6">

            <h2>@ViewBag.Title.</h2>

            @using (Html.BeginForm("VerifyCode", "Account", new { ReturnUrl = Model.ReturnUrl },
        FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {

                @Html.AntiForgeryToken()
                @Html.Hidden("provider", @Model.Provider)
                @Html.Hidden("rememberMe", @Model.RememberMe)
                <h4>Nhập mã bảo mật từ ứng dụng trong điện thoại của bạn</h4>

                <br />

                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Code, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Xác nhận" />
                    </div>
                </div>
            }

        </div>

        <div class="col-xs-6">
            <img src="~/content/authenticator-iphone-sample.png" class="img-responsive" style="margin-top: 20px" />
        </div>

        <br style="clear: both" />
    </div>
    <div class="login-footer">
        @*<div class="pull-left">
                &copy; CMS 2017 by <a href=""></a>
            </div>*@
        @*<div class="pull-right">
                <a href="#">About</a> |
                <a href="#">Privacy</a> |
                <a href="#">Contact Us</a>
            </div>*@
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/jquery-1.8.0.min.js"></script>
<script src="~/Scripts/jquery-1.8.0.intellisense.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
}
